{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": ".",
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "importHelpers": false,
    "target": "es5",
    "module": "commonjs",
    "lib": ["es5", "es6", "dom"],
    "moduleResolution": "node",
    "sourceMap": false,
    "paths": {
      "*": ["typings/*", "includes/*"]
    },
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strict": true
  }
}
